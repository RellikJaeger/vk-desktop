{
  "productName": "VK Desktop",
  "appId": "ru.danyadev.vkdesktop",
  "artifactName": "VK Desktop Setup ${version}-${arch}.${ext}",
  "electronVersion": "4.2.11",
  "npmRebuild": false,
  "directories": {
    "output": "out"
  },
  "files": ["dist/**", "index.js", "menu.js"],
  "win": {
    "target": [
      {
        "target": "nsis"
      },
      {
        "target": "zip",
        "arch": ["x64", "ia32"]
      }
    ]
  },
  "nsis": {
    "deleteAppDataOnUninstall": true,
    "uninstallDisplayName": "VK Desktop"
  },
  "mac": {
    "category": "public.app-category.social-networking",
    "gatekeeperAssess": true,
    "target": "dmg"
  },
  "linux": {
    "synopsis": "Клиент ВКонтакте",
    "category": "Network",
    "target": "dir"
  }
}
