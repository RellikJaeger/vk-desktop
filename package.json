{
  "main": "index.js",
  "name": "vk-desktop",
  "version": "0.0.5",
  "author": {
    "name": "danyadev",
    "email": "danyadev@mail.ru"
  },
  "license": "Apache-2.0",
  "description": "Клиент ВКонтакте",
  "repository": "https://github.com/danyadev/vk-desktop",
  "build": {
    "appId": "ru.danyadev.vkdesktop",
    "electronVersion": "4.0.6",
    "productName": "VK Desktop",
    "files": [
      "**/*",
      "!**/build",
      "!**/core",
      "!**/node_modules",
      "!**/vue-devtools"
    ],
    "nsis": {
      "oneClick": "false",
      "perMachine": "true",
      "allowToChangeInstallationDirectory": "true",
      "uninstallDisplayName": "VK Desktop"
    },
    "mac": {
      "category": "public.app-category.social-networking",
      "target": "dmg"
    },
    "linux": {
      "synopsis": "Клиент ВКонтакте",
      "category": "Network",
      "target": "AppImage"
    },
    "npmRebuild": "false"
  },
  "scripts": {
    "pack": "electron-builder --dir --ia32 --x64",
    "dist": "electron-builder --ia32 --x64"
  },
  "devDependencies": {
    "electron-builder": "^20.38.5"
  }
}
